<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerMain.PengungsiMainActivity">

        <Button
            android:id="@+id/btnTambahPengungsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Data Pengungsi"/>
        <TextView
            android:id="@+id/judulhaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah volunteer saat ini :"
            android:textSize="20dp"
            android:textAlignment="center"
            android:paddingTop="50dp"/>
    <TextView
        android:id="@+id/jumlahPengungsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20dp"
        android:textAlignment="center"
        android:paddingTop="80dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pengungsi_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jumlahPengungsi"/>


</android.support.constraint.ConstraintLayout>