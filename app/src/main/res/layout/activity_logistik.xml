<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background=" #93E2D5"
    tools:context=".UserMain.LogistikActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/msblogo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Form Logistik"
        android:textAlignment="center"
        android:textSize="30dp" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/txtNamaLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Nama Logistik"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <EditText
        android:id="@+id/txtJumlahLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Jumlah Logistik"
        android:inputType="number"
        android:maxLines="1"
        android:padding="8dp"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <EditText
        android:id="@+id/txtKeteranganLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_create_black_24dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Keterangan Logistik"
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db"/>

    <Button
        android:id="@+id/btnSubmitLog"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_login"
        android:text="Simpan"/>




</LinearLayout>