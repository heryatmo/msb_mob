<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context=".VolunteerMain.PengungsiActivity"
    android:background="@color/colorMint">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="260dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="48dp"
                android:padding="16dp"
                android:src="@drawable/msblogo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Data Pengungsi"
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Pilih Shelter"/>
            <Spinner
                android:id="@+id/spShelter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


            <EditText
                android:id="@+id/txtNamaPengungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_account_circle_black_18dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Nama"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <EditText
                android:id="@+id/txtTempatLahirPengungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_add_location_black_18dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Tempat Lahir"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txtTanggalLahirPengungsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_date_range_black_18dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Tanggal Lahir"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnTanggal"
                    android:onClick="datePengungsi"
                    android:hint="Pilih Tanggal"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Jenis Kelamin :"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_wc_black_18dp"
                    android:drawablePadding="12dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="7dp"/>
                <Spinner
                    android:id="@+id/spjenis_kelaminPengungsi"
                    android:entries="@array/jenis_kelamin"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_wc_black_18dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Jenis Kelamin"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:visibility="visible" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/ic_whatshot_black_18dp"
                    android:drawablePadding="12dp"
                    android:text="Golongan Darah :"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spgolongan_darahPengungsi"
                    android:entries="@array/golongan_darah"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Golongan Darah"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>



            <EditText
                android:id="@+id/txtAlamatPengungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_add_location_black_18dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Alamat"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <EditText
                android:id="@+id/txtAgamaPengungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Agama"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Status Pengungsi :"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_wc_black_18dp"
                    android:drawablePadding="12dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="7dp"/>
                <Spinner
                    android:id="@+id/spstatus_pengungsi"
                    android:entries="@array/status"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_wc_black_18dp"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Jenis Kelamin"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColorHint="#fff"
                    android:visibility="visible" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <EditText
                android:id="@+id/txtKeteranganPengungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Keterangan"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>


            <Button
                android:id="@+id/btnSubmitPengungsi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="Daftar" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>